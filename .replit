modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["tree"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DBSetup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AdminOnboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DemoSeeder"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "DBSetup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/push-schema.js"

[[workflows.workflow]]
name = "AdminOnboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/admin-onboard.js"

[[workflows.workflow]]
name = "DemoSeeder"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/seed-demo-data.js"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/index.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "npm install && npm run start"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
