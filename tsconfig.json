{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "*": ["./node_modules/*", "./src/*", "./shared/*"]
    },
    "baseUrl": "."
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./shared/**/*", "App.jsx"]
}